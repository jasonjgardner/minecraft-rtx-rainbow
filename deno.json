{
  "tasks": {
    "twd": "twd -w ./src/application/views/index.html -o ./src/assets/css/styles.css",
    "serve": "deno run --allow-read --allow-net --allow-env --allow-write ./src/app.ts",
    "serve:dev": "deno run --inspect --allow-read --allow-write --allow-net --allow-env ./src/app.ts"
  },
  "fmt": {
    "files": {
      "include": ["src/", "typings/"],
      "exclude": ["build/", "dist/", "src/assets/css/style.css"]
    },
    "options": {
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["build/", "dist/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "importMap": "./import_map.json"
}
