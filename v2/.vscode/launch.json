  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Build",
      "type": "pwa-node",
      "program": "${workspaceFolder}/src/mod.ts",
      "args": ["--DEPLOY true"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Users\\jason\\.deno\\bin\\deno.EXE",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--import-map",
        "./import_map.json",
        "--config",
        "./deno.json",
        "--inspect",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Serve WS",
      "type": "pwa-node",
      "program": "${workspaceFolder}/serve.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Users\\jason\\.deno\\bin\\deno.EXE",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--import-map",
        "./import_map.json",
        "--config",
        "./deno.json",
        "--inspect",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
